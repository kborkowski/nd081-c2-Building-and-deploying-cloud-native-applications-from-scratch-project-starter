{
  "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "$connections": {
      "defaultValue": {},
      "type": "Object"
    }
  },
  "triggers": {
    "manual": {
      "type": "Request",
      "kind": "Http",
      "inputs": {
        "schema": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "eventType": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "actions": {
    "Send_an_email_(V2)": {
      "runAfter": {},
      "type": "ApiConnection",
      "inputs": {
        "body": {
          "To": "v-krbork@microsoft.com",
          "Subject": "New Advertisement Posted: @{triggerBody()?['title']}",
          "Body": "<p><strong>Advertisement Notification</strong><br><br>Title: @{triggerBody()?['title']}<br>Description: @{triggerBody()?['description']}<br>Event Type: @{triggerBody()?['eventType']}<br><br>This notification was triggered by the Neighborly application.</p>",
          "Importance": "Normal"
        },
        "host": {
          "connection": {
            "name": "@parameters('$connections')['office365']['connectionId']"
          }
        },
        "method": "post",
        "path": "/v2/Mail"
      }
    },
    "Response": {
      "runAfter": {
        "Send_an_email_(V2)": [
          "Succeeded"
        ]
      },
      "type": "Response",
      "kind": "Http",
      "inputs": {
        "statusCode": 200,
        "body": {
          "message": "Email notification sent successfully"
        }
      }
    }
  },
  "outputs": {}
}
